{
  "family": "devops-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "devops-container",
      "image": "<account-id>.dkr.ecr.ap-south-1.amazonaws.com/devops-sample-app:latest",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}